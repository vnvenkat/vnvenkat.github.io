	doi = {10.5555/1087562},
	keywords = {runtime monitoring;Security policies;isolated execution;mobile code;sandboxing;information flow},
	month = {November},
	school = {Stony Brook University},
	series = { Stony Brook University},
	title = {Enforcement techniques for expressive security policies},
	url = {https://dl.acm.org/doi/10.5555/1087562},
	year = {2004},
